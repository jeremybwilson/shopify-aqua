{% layout none %}
{
  "collection": {{ collection.title | json }},
  "optionsByVariantId":
  {
    {% for variant in product.variants %}
      {{ variant.id | downcase | json }}:
        [
          {% for option in product.options %}
            {
              "option": {{ option | json }},
              "value": {{ variant.options[forloop.index0] | json }}
            }{% unless forloop.last %},{% endunless %}
          {% endfor %}
        ]{% unless forloop.last %},{% endunless %}
    {% endfor %}
  }
}
