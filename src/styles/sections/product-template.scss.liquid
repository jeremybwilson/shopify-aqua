/* Product Description / Read more
* ---------------------------------------------- */
.product-desc {
  float: left;
  width: 100%;
  line-height: 1.6;
  font-weight: $font-weight--medium;
  letter-spacing: 1.23px;

  .rte {
    margin-bottom: 0;

    ul li {
      margin-bottom: 0.25em;

      &:last-child {
        margin-bottom: 0;
      }
    }
  }
}

.product-desc__heading {
  margin-bottom: 0.5em;
}

 .product-desc__more {
  display: none;
  opacity: 0;
  transition-property: opacity;
  transition-duration: 0.4s;
  transition-timing-function: ease-in-out;
  margin: 20px 0;

  &.js-read-more-active {
    opacity: 1;
  }
}

.product-desc__read-wrapper {
  margin: 10px 0;
}

.product-desc__read {
  display: inline-block;
  padding: 1px;
  border-bottom: 1px solid $color--dotted;
}

/* Power Reviews
* ---------------------------------------------- */
.product-star-rating {
  @include flexbox;
  @include align-items(center);
  @include flex(row wrap);

  #pr-reviewsnippet {
    margin-right: 15px;
  }

  .pr-snippet-stars .pr-star-v4 {
    width: 12px !important;
    height: 12px !important;
    padding-left: 0px !important;
    padding-right: 0px !important;
    margin-right: 8px !important;

    &:last-child {
      margin-right: 0 !important;
    }
  }
}

.product-star-rating__write-review {
  @include fontDim(16px,16px,1.23px);
  font-weight: $font-weight--medium;
  color: $color--general-grey;
