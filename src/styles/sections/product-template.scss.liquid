@charset "UTF-8";

/*==================
  PDP
 ==================*/

.template-product #breadcrumb {
  text-align: center;
}

.product {
  #breadcrumb {
    @include fontSize(14px);

    @include mq('tablet-and-up') {
      @include fontSize(16px);
    }
    & > *:nth-last-child(-n+3) {
      // hides and shows the page-title, the separator before it, and the #results-count div
      display: none;

      @include mq('tablet-and-up') {
        display: inline;
      }
    }
  }
}

.product--mobile-header {
  position: relative;
  padding: 12px 20px 12px;
  margin-top: 15px;
  margin-bottom: 25px;

  @include mq('tablet-and-up') {
    display: none;
  }
  
  &:after {
    position: absolute;
    content: '';
    top: 100%;
    left: 0;
    height: 25px;
    width: 100%;
    opacity: .25;

    background: #ffffff;
    background: -moz-linear-gradient(top, #d9d9d9 0%, #ffffff 100%);
    background: -webkit-linear-gradient(top, #d9d9d9 0%,#ffffff 100%);
    background: linear-gradient(to bottom, #d9d9d9 0%,#ffffff 100%);
    filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#d9d9d9', endColorstr='#ffffff',GradientType=0 );    
  }

  .mobile-header--top {
    @include flexbox;
    @include justify-content(space-between);
    @include align-items(center);
  }  

  .product-title {
    color: $color--primary-2;
    @include fontDim(15px,16px,0);
    font-weight: $font-weight--black;
    text-transform: uppercase;
  }
  .money {
    @include fontSize(15px);
  }

  .add {
    margin-left: 40px;
    max-width: 92px;
    padding: 6px 8px;
    margin-right: 0;
    @include fontSize(12px);
    line-height: 14px / 12px * 1em;
    white-space: normal;
  }
  .add[disabled] {
    @include fontSize(8px);
  }
  .errors {
    width: 100%;
  }
}

#shopify-section-product-template {
  margin-top: 60px;

  @include mq('tablet-and-up') {
    margin-top: 55px;
  }
}

.row.product-details--top,
.row.product-details--reviews {
  @include flexbox;
  @include flex-direction(row);
  @include align-items(flex-start);
  @include justify-content(space-between);

  @include mq('tablet-and-up') {
    width: 1350 / 1440 * 100%;
    max-width: 1350px;
    margin: 0 auto 72px;
  }
}

.product {
  #content {
    h1 {
      color: $color--primary-1;
      @include fontDim(22px,22px,4px);
      font-weight: $font-weight--medium;
      text-align: center;
      text-transform: uppercase;

      @include mq('phone') {
        text-align: left;
      }

      @include mq('tablet-and-up') {
        max-width: 400px;
        // @include fontDim(25px,34px,0);
        @include fontDim(26px, 26px, 4px);
        text-align: left;
      }
    }
  }
}

