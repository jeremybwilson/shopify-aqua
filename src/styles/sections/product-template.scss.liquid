/* Free Shipping / Accordion
 * ---------------------------------------------- */

#free-shipping--accordion,
.accordion {
  @include flexbox;
  @include flex-direction(column);
  width: 100%;
  margin-bottom: 0;
  // margin-bottom: 40px;

  // header & accordion trigger

  dt {
    @include flexbox;
    @include justify-content(space-between);
    @include align-items(center);
    cursor: pointer;

    & > svg {
      width: 21px;
      height: 21px;
      margin-right: 5px;

      @include mq('tablet-and-up') {
        width: 36px;
        height: 36px;
        margin-right: 12px;
      }

      * {
        fill: $color--primary-1;
      }
    }
    h3 {
      color: $color--primary-1;
      @include fontDim(16px,16px,1.23px);
      font-weight: $font-weight--medium;
      margin-bottom: 0;

      @include mq('tablet-and-up') {
        @include fontDim(16px,16px,1.23px);
      }
    }
    .opener {
      margin-left: auto;

      svg {
        width: 10px;
        height: 10px;
        transition: transform .25s ease;
        transform-origin: center;

        * {
          fill: $color--accent-1;
        }
      }
    }
  }
  dt.open {
    .opener svg {
      transform: rotate(180deg);
    }
  }

  // content

  dd {
    display: none;
    margin-top: 20px;
    padding-right: 10px;
    color: $color--primary-1;

    @include mq('tablet-and-up') {
      padding-right: 24px;
    }
    p {
      @include fontDim(16px,25px,.025em);
      color: inherit;
      font-weight: $font-weight--medium;
      margin-bottom: 0;
    }
  }
}

.free-shipping-links {
  margin-top: 20px;
}

.free-shipping-link {
  font-weight: $font-weight--medium;
  display: inline-block;
  padding-bottom: 1px;
  border-bottom: 1px solid $color--dotted;
  margin-right: 15px;
}

/* Reviews Accordion
 * ---------------------------------------------- */
.accordion--product-review {
  @media (min-width: 740px) {
    .accordion__header {
      display: none;
    }

    .accordion__content {
      display: block !important;
      padding: 0;
      margin: 0;
    }
  }
}

/* Big Green Product Description Area
 * ---------------------------------------------- */

.product-description--area {
  padding-top: 50px;
  padding-bottom: 40px;
  background-color: $color--light-gray;

  @include mq('tablet-and-up') {
    padding-top: 100px;
    padding-bottom: 90px;
  }

  .row {
    @include flexbox;
    @include flex-direction(column);
    max-width: 1200px;

    @include mq('phone') {
      padding-left: 30px;
      padding-right: 30px;
    }

    @include mq('tablet-and-up') {
      @include flex-direction(row);
      @include flex-wrap(wrap);
      @include justify-content(space-between);
    }
  }

  h3 { // Description header

    width: 100%;
    margin-bottom: 15px;
    color: $color--primary-1;
    @include fontDim(22px,38px,0);
    font-weight: $font-weight--black;
    text-align: center;
    text-transform: uppercase;

    @include mq('tablet-and-up') {
      padding-left: 120 / 1200 * 100%; // line up with p below
      text-align: left;
    }
  }

  // Paragraph

  .rte, .rte p {
    color: $color--primary-2;
    font-weight: $font-weight--bold;
    @include fontDim(14px,24px,0em);
    text-align: center;

    @include mq('tablet-and-up') {
      @include fontDim(16px,30px,0);
      text-align: left;
    }
  } 

  li {
    position: relative;
    padding-left: 20px;
    text-align: left;
    list-style: none;

    &:before {
      content: '';
      position: absolute;
      top: 10px;
      left: 0;
      width: 5px;
      height: 5px;
      border-radius: 50%;
      background-color: $color--primary-2;
    }
  }
}
.product-description--left {
  @include mq('tablet-and-up') {
    width: 720 / 1200 * 100%;
    padding-left: 120 / 1200 * 100%;
    padding-right: 120 / 1200 * 100%;
  }

  .rte > ul,
  .rte li {
    display: none;
  }
  .product-description--icons {
    @include mq('phone') {
      display: none;
    }
  }
}
.product-description--icons {
  @include flexbox;
  @include flex-wrap(wrap);
  @include justify-content(center);
  @include align-items(flex-start);
  margin: 15px -10px; // neg margins to accommodate item padding

  @include mq('tablet-and-up') {
    @include justify-content(flex-start);
    margin-top: 30px;
  }

  li {
    @include flexbox;
    @include flex-direction(column);
    @include justify-content(center);
    margin: 0 10px 20px;
    max-width: 80px;
    padding-left: 0;
    list-style: none;
    text-align: center;

    &:before {
      display: none;
    }
  }

  img {
    max-width: 54px;
    margin: 0 auto 12px;
  }
  span {
    color: $color--primary-2;
    font-weight: $font-weight--bold;
    @include fontDim(13px,18px,.025em);
  }
}

#product-description--mobile-dropdown {  
  @include mq('phone') {
    display: none;
  }
  @include mq('tablet-and-up') {
    width: 480 / 1200 * 100%;
  }
  .product-description--icons {
    @include mq('tablet-and-up') {
      display: none;
    }
  }
  .rte > p {
    display: none;
  }  
}
#product-description--mobile-dropdown-trigger {
  width: 100%;
  padding: 20px;
  margin-top: 20px;
  margin-bottom: -20px;
  color: $color--primary-1;
  font-weight: $font-weight--black;
  @include fontDim(14px,14px,0);
  text-align: center;
  text-transform: uppercase;
  cursor: pointer;

  @include mq('tablet-and-up') {
    display: none;
  }

  svg {
    width: 10px;
    height: 10px;
    margin-left: 20px;
    transition: transform .25s ease;
    transform-origin: center;

    * {
      fill: $color--accent-1;
    }
  }

  .open-text {
    display: none;
  }
  &.open {
    .closed-text {
      display: none;
    }
    .open-text {
      display: inline;
    }
    svg {
      transform: rotate(180deg);    
    }
  } 
}

