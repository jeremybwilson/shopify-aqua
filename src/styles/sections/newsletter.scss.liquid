@charset "UTF-8";

#shopify-section-newsletter {
  margin-bottom: 0 !important;
}

/* NEWSLETTER OUTERMOST WRAPPER
 *    - First wrapping ID inside newsletter.liquid
 * ------------------------------------------------------------------------- */
#newsletter-simple {
  @include flexbox;
  @include flex-direction(column);

  @include mq('phone') {
    line-height: initial !important; //*  
  }

  @include mq('tablet-and-up') {
  	@include flex-direction(row);
  }

  // NEWSLETTER CONTENT 
  .newsletter-wrapper {
    width: 100%;
    background: {{ settings.newsletter_footer_background }};
    text-align: center;
    padding: 44px 25px 43px;

    .newsletter-inner {
      width: 100%;
      max-width: 325px;  
      margin: 0 auto;

      @include mq( 'tablet-and-up' ) {
        position: relative;
        max-width: 400px;
        @include inline-flex;
        @include align-items( center );
      }
    }


    /* HEADER - Title (optional)
     * ----------------------------------------------------------------------- */
    header {
      padding-top: 0;
      background: transparent;

      .newsletter-heading {
        margin-bottom: 10px;
        font-weight: $font-weight--medium;
        color: {{ settings.newsletter_footer_text }};
        @include fontDim( 23px, 25px, 0 );

        @include mq( 'tablet-and-up' ) {
          margin: 10px 5px 0 0;
        }
      }
    }
    

    /* SUB-HEADER - Richtext block (optional)
     * ----------------------------------------------------------------------- */
    .newsletter-subheading {
      margin-bottom: 15px;
      color: {{ settings.newsletter_footer_text }};
      font-weight: $font-weight--medium;
      text-transform: none;
      @include fontDim( 23px, 25px, 0 );

      @include mq( 'tablet-and-up' ) {
        // Styles here to move it somwehere above the field on tablet + 
      }

      p {
        color: inherit;
        margin-bottom: 0;
        font-size: inherit;
      }
    }


    /* INPUT BOX - Email input form and input element
     * ----------------------------------------------------------------------- */
    form#footer-newsletter {
      @include flexbox;
      @include justify-content(space-between);
      position: relative;
      margin-bottom: 12px;
      background: transparent; 
      border: none;

      @include mq( 'tablet-and-up' ) {
        margin-bottom: 0;
        width: 340px;
      }
      
      &.has-error {
        .newsletter-input {
          color: $color--error;
          // border-bottom: solid 1px $color--error; //Looked a bit odd
        }
      }

      .newsletter-input {
        box-sizing: border-box;
        position: relative;
        z-index: 1;
        width: 100%;
        height: 47px;
        margin-bottom: 0;
        padding: 15px 10px 0;
        box-shadow: none;
        border: none;
        border-bottom: 1px solid $color--border-gray;
        transition: border .25s ease-in-out, color 0.25s ease-in-out;
        outline: none;
        border-radius: 0;
        color: $color--white;
        font-weight: $font-weight--medium;
        @include fontDim( 16px, 16px, 0 );
        text-align: left;

        &:focus {
          color: $color--white;
        }

        @include mq( 'tablet-and-up' ) {
          height: 32px;
          padding: 0 75px 0 0;
        }
      }
    }


    /* SUBMIT BUTTON
     * ----------------------------------------------------------------------- */
    #button-footer-newsletter-submit {
      position: absolute;
      z-index: 2;
      @include flexbox;
      @include justify-content(center);
      @include align-items(center);
      top: 53px;
      right: 50%;
      transform: translateX( 50% );
      height: 47px;
      cursor: pointer;

      @include mq( 'tablet-and-up' ) { 
        top: 0;
        right: 0;
        transform: translateX( 0 );
      }

      // Inner <input> element that actually gets colored
      #footer-newsletter-submit {
        background: transparent;
        color: $color--white;
        outline: none;
        font-weight: $font-weight--medium;
        @include fontDim( 15px, 16px, 2px );

        @include mq( 'tablet-and-up' ) {
          padding-right: 0;
        }
      }
    }


    /* RESPONSE MESSAGES
     * ----------------------------------------------------------------------- */
    #newsletter-form--response {
      position: relative;
      top: 33px; // submit button absolute on mobile so make room for it
      color: $color--white;

      @include mq( 'tablet-and-up' ) {
        position: absolute;
        transform: translateX( -50% );
        width: 100%;
        left: 50%;
        top: 44px;
      }

      #newsletter-error-response {
        @include h7;
        color: $color--error;
      }  

      #newsletter-success-response {
        text-transform: none;

        p {
          color: inherit;
          @include fontSize(16px);
        }
      }
    }
  }

}

