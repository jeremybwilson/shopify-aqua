@charset "UTF-8";

// HOME : Spacing between content blocks
.page-wrap .index-sections .index-section {
  margin-bottom: 0;

  @include mq( 'tablet-and-up' ){
    margin-bottom: 10px;
  }

  @include mq( 'desk-and-up' ) {
    margin-bottom: 45px;
  }
}



#subpage {
  @include flexbox;
  @include flex-direction(column);
  @include justify-content(flex-end);
  margin: 0 auto;

  @include p;
  @include fontDim(14px,24px,0);
  @include fontSize(14px);

  @include mq( 'lap-and-up' ) {
    @include flex-direction(row);
    max-width: 960px;
    margin: 25px auto 0;
  }
  @include mq( 'desk-and-up' ) {
    // padding-left: 15%;
    max-width: 1200px;
  }

  &.no-left-nav {

    @include mq( 'tablet-and-up' ){
      width: 60%;
    }
  }

  // SUBPAGE : Left-nav

  div.left-nav {
    margin: 25px auto;
    width: 90%;

    @include mq( 'lap-and-up' ) {
      margin: 0 0 25px 0;
      @include flex-basis(220px);
      padding-right: 20px;
    }
    @include mq( 'desk-and-up' ) {
      @include flex-basis(300px);
    }

    div.desktop-left-nav {
      display: none;

      @include mq( 'lap-and-up' ) {
        display: block;
      }

      ul {
        list-style-type: none;

        li {
          @include fontDim(16px,30px,0);
          font-weight: $font-weight--medium;
          padding: 5px 0;
          margin-bottom: 0px;

          &:before {
            content: " ";
            margin-right: 0;
          }

          &.active {
            font-weight: $font-weight--bold;

            a {
              color: $color--primary-1;
            }
          }

          a {
            color: $color--gray-2;
          }
        }
      }
    }
  }

  .left-nav--categories {
    @include mq("lap-and-up") {
      display: none;
    }

    .opener {
      @include flexbox;
      @include justify-content(space-between);
      @include align-items(center);
      width: 100%;
      padding: 10px 15px;
      background: $color--gray-1;
      color: $color--white;
      font-weight: $font-weight--book;
      @include fontSize(14px);

      svg {
        width: 10px;
        transition: transform .25s ease;
        * {
          fill: $color--white;
        }
      }

      &.is-on {
        svg {
          transform: rotate(-180deg);
        }
      }
    }

    div.dropdown {
      display: none;
      float: left;
      width: 100%;
      background: $color--light-gray;
      padding: 10px 15px;

      a {
        float: left;
        width: 100%;
        color: $color--primary-2;
        margin-bottom: 15px;
      }
    }
  }

  .page-content-field {
    width: 90%;
    margin: 0 auto;

    @include mq( 'lap-and-up' ) {
      @include flex-basis(100%);
    }

    a {
      color: $color--gray-1;

      &.cust-care-email {
        border-bottom: 1px solid $color--gray-2;
        padding-bottom: 3px;
      }
    }

    p {
      font-weight: $font-weight--medium;
      // color: $color--gray-1;

      @include mq( 'tablet-and-up' ) {
        @include fontDim(16px,32px,0);
      }
    }

    h1, h2 {
      color: $color--primary-1;
    }

    h1 {
      @include h1;

      &.landing-title {
        text-transform: uppercase;
        border-bottom: 1px solid $color--light-gray;
        padding: 20px 0;
        margin: 25px 0 25px 0;
        text-align: center;
        @include fontSize(20px);

        @include mq( 'tablet-and-up' ){
          @include fontSize(26px);
          text-transform: capitalize;
          padding: 0 0 20px 0;
          margin: 25px auto 30px;
          text-align: left;
        }
      }
    }

    h2 + h3 {
      margin-top: 0.75em;
    }

    hr {
      margin-bottom: 20px;
    }

    ul, ol {
      li {
        @include fontDim(14px,24px,0);
        color: $color--gray-1;
        font-weight: $font-weight--medium;

        @include mq( 'tablet-and-up' ) {
          @include fontDim(16px,30px,0);
        }

        &:last-child {
          padding-bottom: 10px;
        }
      }
    }

    ul {
      li {
        list-style: none;

        &:before {
          content: "â€¢";
          margin-right: 5px;
        }
      }
    }

    ol {
      list-style-position: outside;
      font-weight: $font-weight--black;
      margin: 0 auto;
      width: 90%;

      li {
        list-style-type: decimal;
        padding-left: 10px;
        width: 100%;
      }
    }

    .content-module {
      @include flex-direction(column);
      @include align-items(flex-start);
      margin: 10px 0;

      @include mq('tablet-and-up') {
        margin: 25px 0;
      }
    }

    .live-chat-bubble {
      width: auto;

      a {
        @include flexbox;
        @include justify-content(center);
        @include align-items(center);
        @include flex-direction(row);
        transition: color .25s ease;
        padding: 0 10px;

        @include mq( 'tablet-and-up' ){
          @include justify-content(flex-end);
        }

        span {
          @include fontSize(14px);
          margin: 0;
          padding: 0 10px;
          text-transform: uppercase;
          width: auto;
        }

        .live-chat-bubble-icon, .icon-chat-bubble {
          width: 20px;
          height: 18px;
          margin-top: -5px;
          transition: fill .3s ease;
        }
      }
    }

    strong {
      color: $color--primary-1;
      font-weight: $font-weight--black;
      text-transform: uppercase;
    }
  }

  p {
    color: $color--dark-gray;
    @include fontDim(14px,24px,0);
    margin-bottom: 20px;

    @include mq( 'tablet-and-up' ) {
      @include fontDim(16px,36px,0);
    }
  }

  h1 {
    @include h1;
    color: $color--primary-1;
    @include fontSize(22px);
    text-transform: uppercase;

    @include mq("tablet-and-up") {
      @include fontSize(30px);
    }
  }
  h2 {
    color: $color--primary-1;
    font-weight: $font-weight--black;
    @include fontDim(17px, 22px, 0);

    @include mq('tablet-and-up') {
      @include fontDim(22px, 22px, 0);
    }
  }

  h3 {
    color: $color--primary-1;
    font-weight: $font-weight--black;
    @include fontDim(14px, 18px, 0);

    @include mq('tablet-and-up') {
      @include fontDim(18px, 18px, 0);
    }
  }

  h4 {
    @include fontSize(14px);
    font-weight: $font-weight--black;
    color: $color--primary-1;
    text-transform: uppercase;

    @include mq("tablet-and-up") {
      @include fontSize(16px);
    }
  }
  h5 {
    @include fontDim(17px,24px,0);
    color: $color--primary-2;
    margin: 15px 0;
    @include mq("tablet-and-up") {
      @include fontDim(25px,34px,0);
    }
  }

  // SUBPAGE : Content : Columns for Shipping

  .shipping-guide-chart {

    @include flexbox;
    @include flex-direction(column);
    margin: 10px 0 20px 0;

    @include mq( 'tablet-and-up' ) {
      @include flex-direction(row);
    }

    .col {
      padding: 20px 30px;
      border: 1px dotted $color--white;
      background: $color--primary-1;
      color: $color--white;
      text-align: center;

      @include mq("tablet-and-up") {
        width: 33%;
        padding: 20px;
      }
    }
  }

}
