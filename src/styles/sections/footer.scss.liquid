@charset "UTF-8";


// VARS
$hoverAnimationTiming: 0.25s ease-in-out; // Note: Hover states use opacity in this brand


// STYLES
.site-footer {
  background: {{ settings.footer_background }};
  padding: 0 0 39px;

  @include mq('tablet-and-up') {
    padding: 0 40px 39px;
  }


  /* CONTENT ROWS : Two rows of content, 1st = links, 2nd = social
   * ----------------------------------------------------------------------- */
  .row {
    width: 100%;

    @include mq('tablet-and-up') {
      @include flexbox;
      @include flex-direction(row);
      @include justify-content(space-between);
      @include align-items(center);
      max-width: 1100px;
    }

    /* MENU LINKS : Row containing the menu links
     * ----------------------------------------------------------------------- */
    &.footer-menu-wrap {
      margin-bottom: 40px; 

      @include mq( 'tablet-and-up' ) {
        margin-bottom: 30px;
      }

      .footer-blocks {
        width: 100%;
        margin: 0 auto;
        max-width: 325px;

        @include mq( 'tablet-and-up' ) {
          max-width: 960px;
          margin-bottom: 30px;
        }

        .footer-nav {
          width: 100%;
          padding: 20px 0 0;

          @include mq('tablet-and-up') {
            width: 100%;
            padding: 0;
          }

          // MENU ITEMS : Individual heading names in list of pages on footer menu (all links are basically headings)
          .nav-sub-header {
            color: $color--white;
            border-bottom: none;
            text-transform: uppercase;
          }

          nav {
            background: transparent;
            font-family: $font-stack--default;
            line-height: initial;
            text-align: left;
            @include fontSize( 14px );

            @include mq('tablet-and-up') {
              @include fontSize( 16px );
            }

            /* LINK-LIST : First Level - Footer Menu link list, accounts for further 
             *             nesting into sub-lists in each <li> via an additional <ul>
             * ----------------------------------------------------------------------- */
            ul.nav-links-list {
              @include flexbox;
              @include flex-direction( column );
              @include justify-content( flex-start );
              @include align-items( flex-start );
              margin-bottom: 0;

              @include mq('tablet-and-up') {
                @include flexbox;
                @include flex-wrap( wrap );
                @include flex-direction( row );
                @include justify-content( center );
                @include align-items( center );


                h4.nav-sub-header {
                  position: absolute;
                  top: 0;
                  left: 0;
                }

                &.footer-sub-nav {
                  columns: 1;
                }
              }

              li {
                position: relative;
                width: 100%;

                @include mq( 'tablet-and-up' ) {
                  margin: 0 25px 10px;
                  width: auto;
                }

                a {
                  display: block;
                  padding: 10px 0;
                  opacity: 1;
                  transition: opacity #{$hoverAnimationTiming};
                  color: {{ settings.footer_color }};
                  font-weight: $font-weight--medium;
                  @include fontDim( 15px, 24px, 2px );

                  @include mq( 'tablet-and-up' ) {
                    @include fontSize( 16px );
                  }
                }

                // HOVER : State change for links in lists
                &:hover a {
                  opacity: 0.7;
                }
              }

              // NESTED : Spacing for Nested Nav Sets when headers are turned on
              .footer-sub-nav-wrapper {
                &:not( :first-child ) {
                  .nav-sub-header {
                    margin-top: 25px;
                  }
                }

                @include mq( 'tablet-and-up' ) {
                  position: relative;
                  width: 49%;
                  display: inline-flex;
                  padding-top: 25px;
                }
              }

            }

          }
        }
      }
    }
      

    /* SOCIAL LINKS : Row containing the social link icons
     * ----------------------------------------------------------------------- */
    &.footer-social-wrap {
      margin-bottom: 50px;

      @include mq( 'tablet-and-up' ) {
        margin-bottom: 75px;
      }

      ul.social-icons-footer {
        display: flex;
        width: 100%;
        max-width: 325px;
        justify-content: center;
        align-items: center;
        margin: 0 auto;

        li {
          width: 26px;
          opacity: 1;
          margin-right: 50px;
          transition: opacity #{$hoverAnimationTiming};

          &:last-child {
            margin-right: 0;
          }

          &:hover {
            opacity: 0.7;
          }

          a {
            width: 100%;
            height: 100%;
            outline: none;
            display: block;
            cursor: pointer;
          }

          svg {
            width: 100%;
            height: 100%;

            &.icon-instagram {
              margin-top: 4px;
            }

            path {
              fill: {{ settings.footer_color }};
            }
          }

          i {
            color: {{ settings.footer_color }};
          }
        }
      }
    }

  } // End of ".row"

} // End of ".site-footer"
