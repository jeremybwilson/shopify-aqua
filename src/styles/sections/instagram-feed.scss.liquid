@charset "UTF-8";

.instagram-feed {
  margin-bottom: 0;
  padding-top: 50px;
  padding-bottom: 15px;
  // background-image: url({{ 'bg-home-instagram-mobile.jpg' | asset_url }});
  background-repeat: no-repeat;
  background-position: center center;
  background-size: cover;
  text-align: center;

  @include mq('tablet-and-up') {
    padding-top: 115px;
    padding-bottom: 90px;
    // background-image: url({{ 'bg-home-instagram.jpg' | asset_url }});
  }


  .row {
    padding: 0;
  }

  // TEXT WRAPPER
  .text-box {
    display: block;
    position: relative;
    padding: 0 24px;
    width: 100%;
    margin: 0 0 25px;

    @include mq( 'tablet-and-up' ) {
      margin-bottom: 30px;
      height: 25px;
    }


    // HEADER
    .heading {
      @include fontDim( 27px, 22px, 0 );
      position: relative;
      color: {{ settings.homepage_instagram_header }};
      font-weight: $font-weight--medium;
      margin-bottom: 12px;
      display: block;

      @include mq( 'tablet-and-up' ) {
        position: absolute;
        left: 0;
      }
    }


    // BODY TEXT
    .body {
      @include mq('tablet-and-up') {
        margin-top: 12px;
      }

      p {
        @include fontDim( 16px, 20px, 0 );
        color: {{ settings.homepage_instagram_text }};
        font-weight: $font-weight--medium;
      }
    }


    // CTA BUTTON
    .cta-with-symbols {
      position: relative;

      @include mq( 'tablet-and-up' ) {
        position: absolute;
        right: 0;
      }

      a, span {
        color: {{ settings.homepage_instagram_text }};
        text-decoration: none;
      }
    }
  }



  // INSTAGRAM FEED IMAGES
  .instagram-user-feed {
    & > div {
      @include flexbox;
      @include flex-wrap(wrap);
    }

    .instagram-item {    
      width: 50%;
      padding: 0;

      @include mq( 'tablet-and-up' ) {
        width: 25%;
      }

      .instagram-image-container {
        display: block;
        height: 100%;
        margin-bottom: 0;
        background-size: cover;
        background-position: center center;

        img {
          opacity: 0;
        }
      }
    }

    // NO TOKEN LINK - Link to generate instagram token so its easier to get done. 
    .ig-token-missing-notice {
      margin-top: 15px;
      color: $color--error;
    }
  }

}