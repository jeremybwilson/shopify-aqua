#content {
  h1.stores-title {
    border-bottom: 0;
  }
}
// STORES PAGE : Content Modules

.stores-container {
  @include flexbox;
  @include flex-wrap(wrap);
  @include justify-content(center);
  // position: relative;
  // z-index: 2;

  @include mq('tablet-and-up') {

    // STORES : Removes top margin from first Content Module, overall second content element on page
    div {
      &:nth-child(2){
        margin-top: 0;
      }
    }
  }

  h1 {
    &.stores-title {
      text-transform: uppercase;
      margin: 25px auto 25px;
      border-bottom: 0;

      @include mq( 'tablet-and-up' ){
        letter-spacing: .75em;
        margin: 25px auto 50px;
      }
    }
  }

  /* CSS for new live chat bubble */
  .live-chat-bubble {
    @include flexbox;
    @include justify-content(flex-end);
    margin: 0 0 20px;
    padding: 5px;
    border-radius: 40px;
    width: auto;

    @include mq( 'tablet-and-up' ){
      width: 100%;
    }

    &.color-scheme-light {
      background-color: rgba(255,255,255, 0);

      a {
        color: $color--primary-1;

        span {
          color: $color--primary-1;
        }

        &:hover {
          color: #616365;

          svg.live-chat-bubble-icon {
            path {
              fill: #616365;
            }
          }
        }

        svg.live-chat-bubble-icon {
          path {
            fill: $color--primary-1;
          }
        }
      }
    }

    &.color-scheme-dark {
      background-color: $color--primary-1;

      a {
        color: $color--white;

        span {
          color: $color--white;
        }

        &:hover {
          color: red;

          svg.live-chat-bubble-icon {
            path {
              fill: #616365;
            }
          }
        }

        svg.live-chat-bubble-icon {
          path {
            fill: $color--white;
          }
        }
      }
    }

    a {
      @include flexbox;
      @include justify-content(flex-end);
      @include align-items(center);
      @include flex-direction(row);
      transition: color .25s ease;
      padding: 0 10px;

      span {
        @include fontSize(14px);
        margin: 0;
        padding: 0 10px;
        text-transform: uppercase;
        width: auto;
      }

      .live-chat-bubble-icon, .icon-chat-bubble {
        width: 20px;
        height: 18px;
        margin-top: -5px;
        transition: fill .3s ease;
      }
    }
  }
}
