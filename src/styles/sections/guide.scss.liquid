
// SHOE GUIDE : Slideshow

#content {
  padding: 50px 0 50px 0;

  @include mq( 'tablet-and-up' ) {
    padding: 75px 0 75px 0;
    width: 100%;
  }
}

.guide--wrapper {}

// SHOE GUIDE : Content Modules

.about-container {
  @include flexbox;
  @include flex-wrap(wrap);
  @include justify-content(center);
  // position: relative;
  // z-index: 2;

  @include mq('tablet-and-up') {
    // width: 83.33%;
    // max-width: 1200px;
    // margin: 0 auto;

    // ABOUT US : Removes top margin from first Content Module, overall second content element on page
    div {
      &:nth-child(2){
        margin-top: 0;
      }
    }
  }

  .about-bottom-banner {
    display: flex;
    flex-direction: column;
    width: 100%;

    @include mq('tablet-and-up') {
      position: relative;
    }

    img {
      width: 100%;
    }

    .banner-text-box {
      background: $color--white;
      width: 100%;
      margin: 0;
      padding: 35px;

      @include mq('tablet-and-up') {
        position: absolute;
        top: 50%;
        width: 41%;
        padding: 50px;
        transform: translateY(-50%);

        &.left {
          left: 0;
        }

        &.right {
          right: 0;
        }
      }

      .banner-divider {
        background: $color--light-gray;
        margin-bottom: 12px;
        margin: 0 auto 12px;
        width: 65px;
        height: 1px;

        @include mq('tablet-and-up') {
          margin: 0 0 12px;
        }
      }

      &.dark {
        // background: $color--primary-1;
        background: $color--gray-1;

        h2, p {
          color: $color--white;
        }
      }

      h2, p {
        width: 100%;
        text-align: center;

        @include mq('tablet-and-up') {
          text-align: left;
        }
      }

      h2 {
        font-size: 24px;
        margin-bottom: 10px;
      }

      p {
        font-size: 14px;
        font-weight: 600;

        @include mq('tablet-and-up') {

        }
      }
    }

    /* CSS for new live chat bubble */

    .live-chat-bubble {
      margin: 0 auto 20px;
      position: relative;
      right: unset;
      bottom: unset;
      padding: 5px;
      border-radius: 40px;
      width: auto;
      order: 3;

      @include mq( 'tablet-and-up' ){
        position: absolute;
        right: 5%;
        bottom: 12%;
      }

      &.color-scheme-light {
        background-color: rgba(255,255,255, 0);

        a {
          color: $color--primary-1;

          span {
            color: $color--primary-1;
          }

          &:hover {
            color: #616365;

            svg.live-chat-bubble-icon {
              path {
                fill: #616365;
              }
            }
          }

          svg.live-chat-bubble-icon {
            path {
              fill: $color--primary-1;
            }
          }
        }
      }

      &.color-scheme-dark {
        background-color: $color--primary-1;

        a {
          color: $color--white;

          span {
            color: $color--white;
          }

          &:hover {
            color: red;

            svg.live-chat-bubble-icon {
              path {
                fill: #616365;
              }
            }
          }

          svg.live-chat-bubble-icon {
            path {
              fill: $color--white;
            }
          }
        }
      }

      a {
        @include flexbox;
        @include justify-content(flex-end);
        @include align-items(center);
        @include flex-direction(row);
        transition: color .25s ease;
        padding: 0 10px;

        span {
          @include fontSize(14px);
          margin: 0;
          padding: 0 10px;
          text-transform: uppercase;
          width: auto;
        }

        .live-chat-bubble-icon, .icon-chat-bubble {
          width: 20px;
          height: 18px;
          margin-top: -5px;
          transition: fill .3s ease;
        }
      }
    }
  }
}

.content-module {
  @include flexbox;
  @include flex-direction(column);
  @include align-items(center);
  margin: 0;
  width: 100%;

  @include mq('tablet-and-up') {
    @include flex-direction(row);
    margin: 75px 0;
  }

  .text-box {
    @include flexbox;
    @include justify-content(center);
    @include align-content(center);
    @include flex-direction(column);
    @include flex-wrap(wrap);
    width: 100%;
    padding: 45px 30px;
    text-align: center;

    @include mq('tablet-and-up') {
      @include justify-content(flex-end);
      width: 50%;
      padding-left: 7.5%;
      padding-right: 7.5%;
    }

    h2 {
      color: $color--primary-1;
      @include fontDim(16px,26px,0);

      @include mq('lap-and-up') {
        @include fontDim(22px,36px,0);
        width: 100%;
        text-align: right;
      }
    }

    p {
      color: $color--primary-1;
      font-weight: $font-weight--medium;
      @include fontDim(16px,26px,0);

      @include mq('tablet-and-up') {
        width: 100%;
        margin: 0 0 12px;
        text-align: right;
      }
    }

    .banner-divider {
      background-color: $color--light-gray;
      margin-bottom: 12px;
      margin: 0 auto 12px;
      width: 65px;
      height: 1px;

      @include mq('tablet-and-up') {
        margin-right: 0;
      }
    }

    strong {
      color: $color--primary-1;
      font-weight: $font-weight--black;
      text-transform: uppercase;
    }
  }
  .image-box {
    width: 100%;

    @include mq('tablet-and-up') {
      width: 50%;
    }

    img {
      display: block;
      width: 100%;
      max-width: none;
      height: auto;
    }
  }

  &.layout-desk--image_left, &.layout-desk--image_overlap_left {

    @include mq('lap-and-up'){
      .text-box {
        @include justify-content(center);

        h2, p {
          text-align: left;
        }

        .banner-divider {
          margin-left: 0;
        }
      }
    }
  }
  &.layout-desk--image_overlap_left, &.layout-desk--image_overlap_right {

    @include mq( 'tablet-and-up' ){
      width: 85%;
    }
    .text-box {
      z-index: 10;
      background: $color--primary-1;

      @include mq( 'tablet-and-up' ){
        width: 60%;
      }

      h2, p {
        color: $color--white;
      }
    }
  }
  &.layout-desk--image_overlap_left {

    @include mq('lap-and-up'){
      .text-box {
        margin-left: -100px;
        h2, p {
          text-align: left
        }
      }
    }
  }

  &.layout-desk--image_overlap_right {

    @include mq('lap-and-up'){
      .text-box {
        margin-right: -100px;
        h2, p {
          text-align: right;
        }
      }
    }
  }
}

// ABOUT US : Content Modules : Variations

.color-scheme--gray {
  @include align-items(stretch);

  .text-box {
    position: relative;
    padding: 65px 30px;
    background: $color--gray-1;

    @include mq('lap-and-up') {
      padding-left: 50px;
      padding-right: 50px;
    }

    &:after {
      position: absolute;
      content: '';
      left: 0;
      top: 0;
      right: 0;
      bottom: 0;
      margin: 15px;
      border: solid 4px rgba(255,255,255,.06);

      @include mq('lap-and-up') {
        margin: 30px;
      }
    }

    h2, p {
      color: $color--white;
    }
    strong {
      color: $color--white;
    }
  }
}

.layout-desk--image_overlap_left {
  .image-box {
    order: 1;
  }
  .text-box {
    order: 2;
  }
}
.layout-desk--image_overlap_right {
  .image-box {
    order: 2;
  }
  .text-box {
    order: 1;
  }
}

.layout-mob--image_top {
  .image-box, .banner-image-box {
    order: 1;
  }
  .text-box, .banner-text-box {
    order: 2;
  }
}
.layout-mob--image_bottom {
  .image-box, .banner-image-box {
    order: 2;
  }
  .text-box, .banner-text-box {
    order: 1;
  }
}

@include mq('tablet-and-up') {
  .layout-desk--image_right {
    .image-box, .banner-image-box {
      order: 2;
    }
    .text-box, .banner-text-box {
      order: 1;
    }
  }
  .layout-desk--image_left {
    .image-box, .banner-image-box {
      order: 1;
    }
    .text-box, .banner-text-box {
      order: 2;
    }
  }

  .layout-desk--image_overlap_right {
    .image-box, .banner-image-box {
      order: 2;
    }
    .text-box, .banner-text-box {
      order: 1;
    }
  }
  .layout-desk--image_overlap_left {
    .image-box, .banner-image-box {
      order: 1;
    }
    .text-box, .banner-text-box {
      order: 2;
    }
  }
}

// ABOUT US : Bottom Block

.about-block {
  padding: 40px;
  text-align: center;
  width: 100%;

  @include mq('lap-and-up') {
    padding: 110px 50px;
    width: 60%;
  }

  h2 {
    @include fontSize(26px);
    color: $color--primary-1;
    font-weight: $font-weight--black;
    text-transform: uppercase;

    @include mq('lap-and-up') {
      display: none;
      @include fontSize(36px);
    }
  }
  p {
    color: $color--primary-2;
    font-weight: $font-weight--medium;
    @include fontDim(16px,26px,0);

    @include mq('lap-and-up') {
      @include fontDim(16px,26px,0);
    }
  }
}
