// SEARCH.SCSS
// -- templates/search.liquid


/*  SEARCH : Core Variables
 * ---------------------------------------------- */
$searchMobileGutter: 10px;
$searchBorder: 1px solid {{ settings.filter_divider_color }};


/*  GLOBAL : 
 *     - Items not in search.liquid that need adjustment
 * ----------------------------------------------------- */
body.search {
    // BREADCRUMB : "Home / SEARCH TERM" Looks funky, hiding for search page
    #breadcrumb {
        display: none;
    }

    #content {
        padding: 0 0 100px;
    }
}



/* SEARCH: Page-specific styles for search.liquid
 * ------------------------------------------------- */ 
#search-template {
    position: relative;
    width: 100%;
    min-height: 600px; // Prevent empty results pages from causing weird layout issues
    margin: 20px 0 0;
    float: none;

    @include mq( 'lap-and-up' ) {
        margin-top: 40px;
    }

    .grid-max-width {
        margin-left: auto;
        margin-right: auto;
    }

    /* TITLE + SEARCH BAR : Header content w/ search bar
     * ------------------------------------------------- */ 
    .search-title, 
    .bc-sf-search-result-number {
        @include h6;
        padding-left: 15px;
        color: $color--primary-1;

        @include mq( 'lap-and-up' ) {
            padding-left: 0;
        }
    }

    .search-title {
        @include fontSize( 20px );
    }

    #search-bar {
        position: relative;
        width: calc( 100% - ( #{$searchMobileGutter} * 2 ) );
        margin: 0 $searchMobileGutter;
        border: none;
        float: none;

        @include mq( 'lap-and-up' ) {
            position: absolute;
            width: 320px;
            top: 13px;
            right: 0;
        }

        input#q {
            @include h7;
            width: 100%;
            border: none;
            font-weight: $font-weight--bold;
            color: $color--primary-1;
            border-bottom: $searchBorder; 
        }

        svg.icon.icon-search {
            width: 16px;
            position: absolute;
            right: 10px;
            top: 8px;
        }
    }


    /* COLLECTION : Product Grid + Item View
     * ------------------------------------------------- */  
    @import url('../snippets/product-grid.scss.liquid');
    


    /* FILTERS : Filter layout styles
     * ------------------------------------------------- */
    @import url('../snippets/filters.scss.liquid');



    /* LAYOUT : Overrides for filter / collection styles
     * ------------------------------------------------- */
    .filter-wrap-desktop {
        @include mq( 'lap-and-up' ) {
            margin-top: 5px;
        }

        .filter-toggle-wrap {
            @include justify-content(flex-end);
            position: static;
        }
    }

    #bc-sf-filter-bottom-pagination {
        color: $color--gray-2; // For ellipsis

        // Number Elements
        span,
        a {
            @include fontSize( 16px );
            font-weight: $font-weight--book;
            background: transparent;
            color: $color--gray-2;
            position: relative;
            padding: 5px 10px;
            margin: 10px 5px;
            border: none;
        }

        // CURRENT PAGE #
        .current {
            color: $color--text-1;
            font-weight: $font-weight--bold;
        }

        // ARROWS - Left
        .fa-angle-left:before {
            position: absolute;
            right: 50%;
            top: 50%;
            border-bottom: 4px solid transparent;
            border-right: 7px solid #000;
            border-top: 4px solid transparent;
            margin-top: -5px;
            content: ' ';
        }
        // ARROWS - Right
        .fa-angle-right:before {
            position: absolute;
            right: 50%;
            top: 50%;
            border-bottom: 4px solid transparent;
            border-left: 7px solid #000;
            border-top: 4px solid transparent;
            margin-top: -5px;
            content: ' ';
        }

        // TOTAL PAGE COUNT
        .count {
            display: none;
        }
    }
}
