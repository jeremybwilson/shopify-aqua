// COLLECTION.SCSS
// -- sections/collection-template.liquid


/*  COLLECTION: Core Variables
 * ---------------------------------------------- */
$resultsTextColor: {{ settings.filter_text_color }};


/*  COLLECTION: Parent Element Tweaks
 * ---------------------------------------------- */
body.collection #content.row {
    width: 100%; // Banner is full width, so moving the row wrapping inward
}

// NAV MENU STUCK - have to adjust margins so its transition state is smooth...
body.collection.nav-menu-stuck {
 #shopify-section-collection-template .collection-template {

    // BANNERS VISIBILITY : 
    //      If Transparent Landing + Banner Present, adjust 
    //      top margin so its under the transparent navbar during scrolling down so it doesn't jump 
    &[data-transparent-landing='true'] {

        // MOBILE BANNER : Prevent jumping on mobile scroll state transition
        @include mq( 'phone-and-tablet' ){
            &[data-has-banner-mobile='true']  {
                margin-top: 0;
            }
        }
    }
 }
}


/*  COLLECTION : Main styling block
 * ---------------------------------------------- */
#shopify-section-collection-template {

    /* COLLECTION : Primary wrapper around component
     * ---------------------------------------------- */
    .collection-template {
        margin-top: 0;

        // BANNERS VISIBILITY : 
        //      If Transparent Landing + Banner Present, adjust 
        //      top margin so its under the transparent navbar
        &[data-transparent-landing='true'] {
            
            // MOBILE BANNER : Present, adjust to under transparent nav
            @include mq( 'phone-and-tablet' ){
                &[data-has-banner-mobile='true']  {
                    margin-top: 30px;
                }
            }

            // DESKTOP BANNER : Present, adjust to under transparent nav
            @include mq( 'lap-and-up' ) {
                &[data-has-banner-desktop='true']  {
                    margin-top: 0; // I know it matches, 
                }
            }

            // TEXTBOX : Positioning of the Textbox (DEFAULT = top)
            //      --> Textbox layout only applies to desktop sizes (1024+)
            
        }
        

        /* COLLECTION FULL-WIDTH WRAP : Keeps width of screen
         * --------------------------------------------------- */
         .collection-full-width-wrap {

            /* COLLECTION BANNER : Header image and content
             * ---------------------------------------------- */
            .collection-banner {
                position: relative;
                
                // BANNER : IMAGES
                .banner-image-desktop {
                    display: none;
                }

                @include mq( 'lap-and-up' ) {
                    .banner-image-desktop {
                        display: block;
                    }

                    .banner-image-mobile {
                        display: none;
                    }
                }


                // BANNER : Textbox
                .banner-text-box-wrap {
                    width: 100%;
                    height: auto;


                    // DESKTOP DISPLAY - Textbox position is paid attention to on desktop, ignored on mobile
                    @include mq( 'lap-and-up' ) {
                        @include flexbox;
                        @include align-items( center ); // VERTICAL : Center (Default)
                        @include justify-content( center ); // HORIZONTAL : Center (Default)
                        position: absolute;
                        height: 100%;
                        left: 0;
                        top: 0;

                        // TRANSPARENT LANDING : Account for landing transparent nav
                        {% if settings.nav_transparent_landing %} 
                            padding: 80px 0 0; //Navbar = 80px high
                        {% else %}
                            padding: 0 20px;
                        {% endif %}

                        // CONSTRAIN WIDTH : Match nav-bar max widths on desktop sizes
                        &[data-constrain-width='true'] {
                            left: 50%;
                            transform: translateX( -50% );
                            max-width: 1000px;
                        }

                        // VERTICAL PLACEMENT : TOP
                        &[data-textbox-vertical='top'] {
                            @include align-items( flex-start );
                        }
                        // VERTICAL PLACEMENT : BOTTOM
                        &[data-textbox-vertical='bottom'] {
                            @include align-items( flex-end );
                        }

                        // HORIZONTAL PLACEMENT : LEFT
                        &[data-textbox-horizontal='left'] {
                            @include justify-content( flex-start );
                        }
                        // HORIZONTAL PLACEMENT : BOTTOM
                        &[data-textbox-horizontal='right'] {
                            @include justify-content( flex-end );
                        }
                    }

                    @include mq( 'desk-and-up' ) {
                        // CONSTRAIN WIDTH : Match nav-bar max widths on desktop sizes
                        &[data-constrain-width='true'] {
                            max-width: 1200px;
                        }
                    }

                    @include mq( 'wide-and-up' ) {
                        // CONSTRAIN WIDTH : Match nav-bar max widths on desktop sizes
                        &[data-constrain-width='true'] {
                            max-width: 1400px;
                        }
                    }

                    .banner-text-box {
                        @include flexbox;
                        @include flex-wrap( wrap );
                        @include flex-direction( column );
                        @include align-items ( center ); // Center Text alignment is default, always center on mobile
                        @include justify-content( center );
                        position: relative;
                        padding: 30px 20px;
                        max-width: 440px;
                        margin: 0 auto; // Center block for mobile
                        text-align: center; // Mobile default

                        // TEXT-ALIGNMENT : Mobile always center aligned, move ".text-____" blocks up if wanted on mobile
                        @include mq( 'lap-and-up' ) {
                            margin: 0;
                            padding: 50px 40px;

                            // TEXT-ALIGN : Left
                            &.text-left {
                                text-align: left;
                                @include align-items( flex-start );
                            }
                            // TEXT-ALIGN : Right
                            &.text-right {
                                text-align: right;
                                @include align-items( flex-end );
                            }
                        }


                        // TEXTBOX : Header
                        .banner-header {
                            @include fontSize( 25px );
                            font-weight: $font-weight--medium;
                            margin-bottom: 15px;

                            @include mq( 'lap-and-up' ) {
                                @include fontDim( 28px, 32px, 7px );
                            }
                            
                        }

                        // TEXTBOX : Divider
                        .banner-divider {
                            position: relative;
                            width: 65px;
                            height: 1px;
                            margin-bottom: 20px;
                            background: $color--text-1;
                        }

                        // TEXTBOX : Body
                        .banner-body {
                            color: $color--dark-gray;
                            font-weight: $font-weight--medium;
                        }
                    }
                }
                
            }

            /* COLLECTION DESCRIPTION : If enabled..
             * ---------------------------------------------- */
            .collection-description {
                position: relative;
            }
         }


        /* COLLECTION CONTENT WRAP : Has max-width like a row
         * NOTE : please dont' move the imports into here, as 
         *        they both use & in their top levels
         * --------------------------------------------------- */
         .collection-content-wrap {
            float: none;
            margin: 0 auto;
         }

        


        /* COLLECTION : Product Grid + Item View
         * ---------------------------------------------- */
        @import url('../snippets/product-grid.scss.liquid');
    }
    

    /* FILTERS : Styling for filter sets
     *    --> keep at this level, uses a few &.name inside
     * -------------------------------------------------- */
    @import url('../snippets/filters.scss.liquid');
}


/* RESULTS COUNT : 
 *    # of results on a collection page, only shown
 *    when filters are present so only applies here.
 *
 *    (NOTE: #results-count in breadcrumbs.liquid)
 * ---------------------------------------------- */
#results-count {
    display: none; //Not used in aquatalia
    @include h7;
    @include fontSize( 16px );
    position: static;
    top: auto;
    color: $resultsTextColor; //Imported from filters.scss.liquid
    font-weight: $font-weight--bold;

    @include mq( 'lap-and-up' ) {
        position: absolute;
        top: 0;
        right: 2px;
        left: auto;
    }
}































































