#nosto-block {
    clear: both;
    margin: 60px 1.04166667%;
    padding-top: 60px;
    padding-bottom: 30px;

    #cartpage-nosto-1 & {
      margin-top: 0;
    }   

    .container {
      max-width: 1400px;
      margin: 0 auto;
    }

    .slick-track {
      #cartpage-nosto-1 & {
        width: 200px !important;
      }
    }
       
    .slick-initialized .slick-slide {
      display: block;
      padding: 0;
      margin-bottom: 0;
      width: 100%;

      #cartpage-nosto-1 & {
        width: 200px !important;
      }
    }

    .slick-slide {
      margin: 3px;

        img {
          width: 100%;
        }
    }

    .item {
      position:relative;
      float: left;
      padding-left: 3px;
      padding-right: 3px;
      width: 100%;
      margin-bottom: 25px;
    }

    .title {
      text-align: left;
      font-family: $sans;
      color: $color--primary-1;
      font-weight: $font-weight--medium;
      @include fontDim( 27px, 32px, 0 );
      text-transform: capitalize;

        // .index-section--nosto-element & {
        //   font-size: 38px;
        // }

        #cartpage-nosto-1 & {
          font-size: 20px;
        }
    }

    .product-info {
        text-align: left;
        color: $color--primary-2;
        font-weight: $font-weight--medium;
        @include fontDim( 18px, 20px, 2px );
        text-transform: uppercase;

       .name {
          font-weight: $font-weight--medium;
          @include fontDim( 18px, 20px, 2px )
       }

       .price {
          @include fontDim( 16px, 16px, 0 );
          .onsale {
            color: #bc0000;
          }
          .was {
            text-decoration: line-through;
          }
       }
    }

/* CONTROLS : Arrows and slider dots
 * ------------------------------------------ */

  .slick-arrow {
    position: absolute;
    top: 40%;
    transform: translateY(-50%);
    z-index: 2;
    // font-family: 'FontAwesome';
    font-size: 20px;

    &:hover { text-decoration: none; }

    &.prev {
      left: -20px;

      &:before {
        // content: "\f104";
      }
      @media only screen and (max-width: 713px) {
        left: 20px;
      }
    }

    &.next {
      right: -20px;
        
      &:before{
        // content: "\f105";
      }
      @media only screen and (max-width: 713px) {
        right: 20px;
      }
    }

    .label { display: none; }

    .icon-caret_right,
    .icon-caret_left { width: 25px; }
  }

  .slick-dots {
    display: flex;
    justify-content: center;

    ul { }
    li {    
      margin: 10px 5px;
      outline: none;
      padding: 10px;
      width: 30px;
      height: 30px;
      font-size: 30px;
      color: #757575;
      cursor: pointer;

      &.slick-active {
        color: #000;
      }
    }
    button {
      display: none;
    }
  }

  .nosto-ribbon {
   display: none !important;
  }
}