.social-sharing {
  list-style: none;
  margin: 0;
  padding: 0;
  width: 100%;
  display: table;
}

.social-sharing__item {
  display: table-cell;
  vertical-align: middle;
  white-space: nowrap;
  padding-right: 1em;
  line-height: 0;

  &:last-child {
    padding-right: 0;
  }
}

.social-sharing__link {
  display: inline-block;
  line-height: 0;
  color: $color--primary-2;
}
