.afterpay-link {
    border: none;
}
img.afterpay-logo {
    width: 80px !important;
    height: auto !important;
}
@media only screen and (max-width : 480px) {
    .afterpay-logo {
        height: auto !important;
        width: auto !important;
    }
}    

// PRODUCT

body.product {

    #afterpay-modal-modal > div > div > div.c-afterpay-info-modal-preface-outer > div > div:nth-child(1) > div > h2 > svg {
        width: 230px !important;
    }
    .c-afterpay-info-modal-process__heading {
        text-align: center !important;
    }
    .c-afterpay-info-modal-process__copy {
        text-align: center !important;
    }
    p.afterpay-paragraph {    
        font-size: 12px;
        margin-top: 0;
    }

    @media only screen and (max-width : 480px) {
        .afterpay-paragraph {
            font-size: 10px;
        }
    }
}

// CART 

body.cart {
    p.afterpay-paragraph {
        font-size: 12px !important;
        margin-top: 1em;

    }
    @media only screen and (max-width : 480px) {
        .afterpay-paragraph {
            font-size: 10px;
        }
    }
}