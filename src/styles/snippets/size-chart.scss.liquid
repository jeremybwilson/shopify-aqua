.size-chart--wrapper {
  margin-bottom: 2rem;

  h2 {
    margin-bottom: 12px;
    // color: $primary--1;
    font-weight: $font-weight--medium;
    @include fontSize(16px);
    text-align: center;

    @include mq('tablet-and-up') {
      margin-bottom: 12px;
      @include fontSize(30px);
    }

    &:after {
      display: none;
    }  
  }
}

table.size-chart {
  white-space: nowrap;

  td, th {
    padding: 8px;
    text-align: center;
    font-weight: $font-weight--medium;

    @include mq('lap-and-up') {
      padding: 16px;
    }
  }

  thead tr {
    @include fontSize(14px);
    letter-spacing: 0.025em;
    vertical-align: bottom;
    line-height: 1.2;

    @include mq('lap-and-up') {
      font-size: 1rem;
    }
  }

  tbody {
    border: 1px solid $color--gray-1;
    td {
      border-right: solid 1px $color--gray-1;
      @include fontDim(12px,12px,.025em);

      @include mq('lap-and-up') {
        @include fontSize(16px);
      }
    }
    td:last-of-type {
      border-right: none;
    }
  }
}

// POPUP

.size-chart--trigger {
  color: $color--primary-2;
  font-weight: $font-weight--medium;
  @include fontDim(16px,16px,.025em);
  text-decoration: underline;
}

.product {
  .size-chart--wrapper {
    margin-bottom: 0;
    padding: 15px;

    @media (min-width: 740px) {
      padding: 30px;
    }
  }

  .fancybox-skin {
    background-color: $color--white;
    padding-top: 55px !important;
  }

  .fancybox-close {
    right: 15px;
    margin-left: 0;
    top: 15px;
    color: $color--gray-1;
    text-decoration: none;

    @media (min-width: 740px) {
      right: 30px;
    }
  }
}

#size-chart--popup {
  max-height: 80vh;

  @include mq('lap-and-up') {
    max-width: 720px;
    width: 100%;
    padding-left: 50px;
    padding-right: 50px;
    overflow-y: scroll;
  }
}

// FAQ
.faq-size-charts-wrapper {
  position: relative;
  margin: 15px 0 25px;

  a {  
    font-weight: $font-weight--medium;
  }
}
