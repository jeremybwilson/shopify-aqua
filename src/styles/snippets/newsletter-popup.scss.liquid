#subscribe--popup-wrapper {
  position: fixed !important;
  // top: auto !important;
  bottom: auto !important;
  left: 0 !important;
  right: 0 !important;
  width: 90% !important;
  margin: 0 auto;
  box-shadow: 0px 2px 25px 0px rgba(0,0,0,0.33);

  @include mq('tablet-and-up') {
    width: 100%;
    max-width: 490px;
    // left: auto !important;
    // right: 0 !important;
  }

  .fancybox-inner {
    width: 100% !important;
    overflow: hidden !important;
  }

  // .fancybox-close {
  //   display: none;
  // }

  .fancybox-skin {
    background-color: $color--transparent;
  }

  /* Rotates 'X' closure icon 90 deg specifically for the footer email sign up modal */
  .fancybox-close {
    right: 5px;
    transform: rotate(90deg);
  }
}

#subscribe--popup {
  padding-top: 35px;
  position: relative;
  background-color: $color--white;
  border: 1px dotted #FFF;

  @include mq('tablet-and-up') {
    padding-top: 45px;
  }

  h3, p {
    color: $color--primary-1;
    text-align: center;
    width: 80%;
    padding: 10px 0;
    margin: 0 auto;

    @include mq( 'tablet-and-up' ) {
      max-width: 350px;
      margin-left: auto;
      margin-right: auto;
    }
  }

  h3 {
    margin-bottom: 0;
    @include fontDim(22px,28px, .2em);
    font-weight: $font-weight--black;
    text-transform: uppercase;

    @include mq( 'tablet-and-up' ) {
    //  max-width: 300px;
    //  margin-left: auto;
    //  margin-right: auto;
    }
  }

  p {
    @include fontDim(16px,20px, 0);
    color: $color--primary-1;
    font-weight: $font-weight--medium;
    margin-bottom: 0;
    text-align: center;

    &.fine-print {
      // display:none;
      background-color: $color--white;
      color: $color--gray-1;

      @include fontDim(14px,16px, 0);
      width: 100%;
      padding: 10px;
    }

    a {
      color: $color--primary-1;
      font-weight: $font-weight--bold;
      text-decoration: underline;

      &:hover {
        color: $color--accent-1;
      }
    }
  }


  // form

  form {
    @include flexbox;
    @include justify-content(space-between);
    @include flex-direction(column);
    position: relative;
    padding-top: 20px;
    padding-bottom: 12px;
    background-color: $color--primary-1;
    border: solid 1px transparent;
    transition: border .3s ease;

    &#subscribe--popup-form {
      background-color: $color--primary-1;
    }
  }

  form.has-error {
    border: solid 1px 1px 0 1px $color--error;
  }

  input[type="email"],
  select {
    font-family: $font-stack--default;

  }
  input[type="email"] {
    box-sizing: border-box;
    position: relative;
    z-index: 1;
    width: 100%;
    height: 47px;
    margin-bottom: 0;
    padding: 15px;
    border: none;
    border-radius: 0;
    background-color: $color--white;
    color: $color--primary-1;
    @include fontSize(14px);
    // font-family: $font-stack--default;
    font-weight: $font-weight--bold;
    letter-spacing: .025em;
    text-align: center;
    line-height: 14px;

    @include mq('tablet-and-up') {
      height: 46px;
      padding: 20px;
      // @include fontSize(16px);
      // line-height: 16px;
    }

    &:focus {
      color: $color--primary-1;
    }

    input[type="radio"] {
      width: auto;
    }
  }

  form.has-error input[type="email"] {
    color: $color--error;
  }

  label {
    @include fontSize(16px);
  }

  .gender, .birth_date, .email, .subscribe--popup-submit {
    @include flexbox;
    @include flex-direction(row);
    @include align-items(center);
    width: 80%;
    margin: 0 auto;
  }

  .gender {
    @include justify-content(space-evenly);
    width: 55%;
    margin: 0 auto;

    label {
      color: $color--white;
    }

    input {
      min-width: unset;
    }
  }

  .birth_date {
    @include flex-wrap(wrap);
    @include justify-content(center);

    label {
      padding: 0px 15px;
      color: $color--white;

      &.full-width-block {
        width:  100%;
        padding: 10px 0;
        text-align: center;
      }

      select {
        background-color: $color--white;
      }
    }
  }

  .email {
    padding: 20px 0;

    label {
      width: 100%;
      margin: 0 auto;
    }
  }

  #subscribe--popup--header {
    @include flexbox;
    @include flex-direction(column);
    @include justify-content(center);
    background-color: $color--white;
    padding-bottom: 25px;
  }


  #subscribe--popup--button {
    // position: absolute;
    // z-index: 2;
    // top: 0;
    // right: 0;
    @include flexbox;
    @include justify-content(center);
    @include align-items(center);
    width: auto;
    margin: 0 auto;
    cursor: pointer;

    @include mq('tablet-and-up') {
      // height: 46px;
    }

    svg {
      color: $color--white;
      fill: $color--white;
      margin-right: 10px;
      width: 12px;
      height: 12px;

      g {
        fill: $color--white;

        path {
          stroke: $color--white;
        }
      }
    }

    &:hover {
      svg * {
        fill: $color--accent-2;
      }
    }
  }
  input[type="submit"] {
    // display: none;
    background: $color--primary-1;
    @include fontSize(16px);
    height: auto;
    line-height: normal;
    padding: 0;
    margin: 0;

    &:hover {
      color: $color--gray-1;
    }
  }

  // response messages

  #subscribe--popup--form-response {
    color: $color--white;
    background-color: $color--primary-1;
    padding: 10px;
    text-align: center;

    &.has-error {

      div#subscribe--popup--error-response, div#subscribe--popup--error-response-birthdate {
        color: #F00;
      }

    }

    #subscribe--popup--error-response, #subscribe--popup--error-response-birthdate {
      @include h7;
      margin-bottom: 12px;
    }
    #subscribe--popup--success-response {
      text-transform: none;

      p {
        color: inherit;
        @include fontSize(16px);
      }
    }
  }
}
