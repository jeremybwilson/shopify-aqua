{% assign width = '44px' %}
{% assign height = '37px' %}
$swatchOutlineColor: {{ settings.react_swatch_outline_color }};

.swatch {
  @include flexbox;
  @include flex-wrap(wrap);
  margin-bottom: 14px;

  // swatch header
  .swatch-header {
    width: 100%;
    margin-bottom: 14px;
  }

  h5,
  .current-option {
    display: inline;
    @include fontDim(16px,16px,1.23px);
    font-weight: $font-weight--medium;

    // @include mq('tablet-and-up') {
    //   @include fontSize(16px);
    // }
  }

  // swatch main label
  h5 {
    color: $color--primary-1;
  }

  // swatch current option
  .current-option {
    margin-left: .5em;
    color: $color--gray-3;
  }

  // SIZE SQUARES : Improve size alignment for small and large size squares so they map cleanly into the spacing
  &.size {
    width: calc( 100% + 5px ); // 100% + 5 so we can cheat the right margin to account for long and short size tags ("Youth 6" vs "5.5")

    // Size : "5" or "5.5" or "10.5"
    .swatch-element.short-label label {
      width: 46px; //So half sizes = whole size boxes
    }

    // Size : "Youth 6" or "Wide 6"
    .swatch-element.long-label label {
      width: 97px; //So half sizes = whole size boxes
    }
  }

  .swatch-elements {
    font-size: 0;
  }

  // swatch loop
  .swatch-element {
    display: inline-block;
    -webkit-transform:translateZ(0); /* webkit flicker fix */
    -webkit-font-smoothing:antialiased; /* webkit text rendering fix */
    position:relative;
    margin-right: -1px;
    margin-bottom: -1px;

    input {
      display: none;
    }

    & > label { // actual visible swatch
      display:-moz-inline-stack;
      display:inline-block;
      vertical-align: middle;
      cursor: pointer;
      zoom:1;
      *display:inline;
      position: relative;
      min-width: {{ width }};
      height: {{ height }};
      padding:0;
      border: solid 1px $color--general-grey;
      color: $color--primary-1;
      @include fontDim(13px,13px,.025em);
      font-weight: $font-weight--medium;
      line-height: {{ height }};
      text-align: center;
      text-transform: uppercase;
      white-space: nowrap;
    }
    label:hover,
    input:checked + label {
      background-color: $color--primary-1;
      border-color: $color--primary-1;
      color: $color--white;
    }
  }

  // soldout
  .swatch-element.soldout {
    label,
    label:hover,
    input:checked + label {
      background-color: $color--light-gray;
      opacity: 0.75;
      color: $color--primary-1;
    }
  }

  // Color Swatches
  .swatch-element.color {
    & > label {
      position: relative;
      width: 20px;
      height: 20px;
      min-width: 0;
      min-height: auto;
      border: solid 1px $color--white;
      border-radius: 50%;
      background-color: $color--light-gray; // shows a default color until we get swatch images up
      margin-right: 16px;
      margin-bottom: 16px;
      background-size: contain;
      background-position: center;
      background-repeat: no-repeat;

      // SELECTION HIGHLIGHTER
      &:after {
        content: '';
        display: block;
        position: absolute;
        width: 24px;
        height: 24px;
        border-radius: 50%;
        left: -3px;
        top: -3px;
        border: solid 1px transparent;
      }

      // WHITE : Add border to white color swatches. 
      //   (Add more if brand has other names for "white" swatches)
      &.swatch-image[data-color*="bone"],
      &.swatch-image[data-color*="ivory"],
      &.swatch-image[data-color*="snow"],
      &.swatch-image[data-color*="white"] {
          border-color: $swatchOutlineColor;
      }
    }
    label:hover {
      border-color: $color--white;
      background-color: inherit;
      box-shadow: none;

      &:after {
        border-color: $swatchOutlineColor;
      }
    }

    input:checked + label {
      border-color: $color--white;
      background-color: none;
      box-shadow: none;

      &:after {
        border-color: $swatchOutlineColor;
      }
    }
  }

  // image with cross
  .crossed-out {
    display: none;
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
  }

  // .swatch-element.soldout .crossed-out {
  //   display: block;
  // }

  // error state
  &.error {
    background-color: #E8D2D2 !important;
    color: #333 !important;
    padding: 1em;
    border-radius: 5px;

    p {
      margin: 0.7em 0;
    }
    p:first-child {
      margin-top: 0;
    }
    p:last-child {
      margin-bottom: 0;
    }
    code {
      font-family: monospace;
    }
  }

  // Tooltip
  .tooltip {
    display:block;
    position:absolute;
    left: 50%;
    margin-left: -8px;
    bottom: 100%;
    z-index: 10000;

    margin-bottom: 15px;
    padding: 4px 6px;
    background: $color--primary-1;

    /* Make it invisible by default */
    filter:alpha(opacity=0);
    -khtml-opacity: 0;
    -moz-opacity: 0;
    opacity:0;
    visibility:hidden;

    color: $color--white;
    @include fontSize(12px);
    font-weight: $font-weight--medium;
    text-align: center;

    /* Animations */
    -webkit-transform: translate(-50%, 10px);
    -moz-transform: translate(-50%, 10px);
    -ms-transform: translate(-50%, 10px);
    -o-transform: translate(-50%, 10px);
    transform: translate(-50%, 10px);

    -webkit-transition: opacity .25s ease-out, transform .25s ease-out;
    -moz-transition: opacity .25s ease-out, transform .25s ease-out;
    -ms-transition: opacity .25s ease-out, transform .25s ease-out;
    -o-transition: opacity .25s ease-out, transform .25s ease-out;
    transition: opacity .25s ease-out, transform .25s ease-out;

    -webkit-box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.28);
    -moz-box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.28);
    -ms-box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.28);
    -o-box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.28);
    box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.28);

    &:before {
      bottom:-20px;
      content:" ";
      display: block;
      height: 20px;
      left: 0;
      position: absolute;
      width: 100%;
    }
    &:after {
      border-left: solid transparent 10px;
      border-right: solid transparent 10px;
      border-top: solid $color--primary-1 10px;
      bottom: -10px;
      content: " ";
      height: 0;
      left: 50%;
      margin-left: -10px;
      position: absolute;
      width: 0;
    }
  }

  @include mq( 'lap-and-up' ) {
      .swatch-element:hover .tooltip {
        filter: alpha(opacity=100);
        -khtml-opacity: 1;
        -moz-opacity: 1;
        opacity: 1;
        visibility: visible;
        -webkit-transform: translate(-50%,0px);
        -moz-transform: translate(-50%,0px);
        -ms-transform: translate(-50%,0px);
        -o-transform: translate(-50%,0px);
        transform: translate(-50%,0px);
      }
  }
}


#product-add {
  margin-top: 0;
}

.quantity-select__label {
  font-weight: $font-weight--medium;
  font-size: 16px;
  letter-spacing: 1.23px;
}

input.add {
  width: 100%;
  height: 48px;
  margin-top: 0;
  background: $color--primary-1;

  @include mq('tablet-and-up') {
    height: 55px;
  }

  &:hover {
    background: $color--primary-1;
  }
}

.atc-wrapper {
  display: table;
  table-layout: fixed;
  width: 100%;
  margin-bottom: 10px;
  border: 1px solid #000;

  .AddtoCart,
  .wk-link {
    display: table-cell;
    vertical-align: middle;
  }

  .AddtoCart {
    margin-bottom: 0;
    letter-spacing: 2.96px;
    outline: none;
  }

  .wk-link {
    text-align: center;
    width: 55px;

    .wk-count {
      display: none;
    }
  }

  a.wk-link .wk-icon {
    margin: 0;
    line-height: 0;
  }

  .wk-icon svg {
    display: inline-block;
    vertical-align: middle;
  }

  a.wk-link .wk-icon svg path {
    fill: $color--primary-1;
    stroke: $color--primary-1;
  }
}
