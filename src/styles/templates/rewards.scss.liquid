.rewards-page{
    .max-width {
        max-width: 1110px;
        margin: 0px auto !important;
        float: none !important;
    }
    .way-to-earn-point-part h2 {
        font-weight: 500;
        font-size: 30px;
        text-transform: uppercase;
        letter-spacing: 9px;
        text-align: center;
        margin: 92px 0 65px;
    }
    .earn-mony-part-main {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }
    .earn-part-info {
        text-align: center;
        padding:40px 20px 55px;
        letter-spacing: 1.1px;
        border-right: 1px solid #e5e5e5;
        border-bottom: 1px solid #e5e5e5;
        flex: 0 0 33.333%;
        &:last-child{
           border:0px !important;
        }
        p {
            display: inline-block;
            font-size: 1rem;
            line-height: 1.8em;
            letter-spacing: 1.23px;
            font-weight: 500;
            margin-bottom: 0;
            width:100%;
        }
        h3 {
            font-size: 1.625rem;
            line-height: 1em;
            letter-spacing: 0px;
            text-align: center;
            font-weight: 500;
            margin-bottom: 15px;
            margin-top:15px;
        }
    }
    .earn-part-info:nth-child(3n) {
        border-right: 0px;
    }
    .icon-earn {
        min-height: 33px;
        display: flex;
        align-items: flex-end;
        justify-content: center;
    }
    .REDEMPTIONS {
        background-color: #fcfcfc;
        margin-top: 120px;
        text-align: center;
        padding: 140px 0;
        h3 {
            font-weight: 500;
            font-size: 28px;
            text-transform: uppercase;
            letter-spacing: 10px;
            text-align: center;
            margin: 0px 0 50px 0;
        }
    }
    .dolor {
        flex: 0 0 25%;
        text-align: center;
    }
    .dolor-coin {
        display: flex;
        flex-wrap: wrap;
        max-width: 64%;
        margin: 0px auto 50px auto;
            justify-content: center;
        p {
            display: inline-block;
            font-size: 1rem;
            line-height: 1.6em;
            letter-spacing: 1.23px;
            font-weight: 500;
            margin-bottom: 0;
        }
        h3 {
            letter-spacing: 0.5px;
            font-size: 35px;
            margin-bottom: 10px;
        }
    }
    .link-only {
        text-decoration: underline;
        margin-top: 27px;
        display: inline-block;
        letter-spacing: 1px;
        font-weight: 500;
        font-size: 15px;
    }
    .button-join {
        line-height: 44px;
        outline: none;
        height: 48px;
        background: #000;
        color: #fff;
        text-align: center;
        font-size: 16px;
        font-family: "Futura-BT",sans-serif;
        font-weight: 700;
        border: 0;
        border-radius: 0;
        transition: all .25s ease-in-out;
        -webkit-appearance: none;
        display: block;
        width: auto;
        padding: 0 15px;
        letter-spacing: .125em;
        text-transform: uppercase;
        text-decoration: none;
        cursor: pointer;
        line-height: 51px;
        min-width: 207px;
        margin: 0 auto !important;
        max-width: 230px;
    }
    .button-join:hover {
        color: #fff;
    }
    .thard-part {
        border-bottom: 0px;
        padding-bottom: 20px !important;
    }
    .top-banner {
        width: 100%;
        height: 455px;
        overflow: hidden;
        position: relative;
        margin-top: -25px;
        img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: center;
        }
    }
    .banner-text {
        position: absolute;
        left: 0;
        right: 0;
        top: 50%;
        text-align: center;
        width: 100%;
        color: #fff;
        font-size: 28px;
        letter-spacing: 6px;
        font-weight: 500;
    }
    @include mq( 'tablet' ){
        .earn-part-info p{
            font-size:14px;
        }
        .top-banner{
            height: 315px;
        }
    }
    @include mq( 'phone' ){
        .earn-part-info{
            flex: 0 0 100%;
            border-bottom:0px;
            padding: 5px 15px 25px;
            p{
                font-size:16px;
            }
            h3{
                font-size: 1.4rem;
            }
        }
        .top-banner{
            height: 315px;
        }
        .way-to-earn-point-part h2{
            font-size: 24px;
            max-width: 80%;
            line-height: 33px;
            margin: 35px auto 20px auto;
            letter-spacing: 2px;
        }
        .REDEMPTIONS{
            padding: 65px 0;
            margin-top: 40px;
            h3{
                letter-spacing: 2px;
                margin: 0px 0 30px 0;
                font-size: 23px;
            }
            .dolor-coin h3{
                font-size: 30px;
                margin-bottom: 5px;
            }
        }
        .dolor{
            flex: 0 0 50%;
        }
        .dolor:first-child{
            margin-bottom: 46px;
        }
        .dolor:nth-child(2){
            margin-bottom: 46px;
        }
        .dolor-coin{
            max-width: 86%;
        }
        .top-banner{
            margin-top: -50px !important;
            height: 215px;
        }
    }
}