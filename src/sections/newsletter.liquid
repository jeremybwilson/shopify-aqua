<div id="newsletter-simple"
  class="newsletter-{{ section.id }}"
  data-section-id="{{ section.id }}"
  data-section-type="newsletter-simple">

  <div class="newsletter-wrapper">
    <div class="newsletter-inner">

      {% comment %} :: HEADING :: {% endcomment %}
      {% unless section.settings.heading == blank and section.settings.newsletter_subheading == blank %}
        <header>

          {% unless section.settings.heading == blank %}
            <h2 class="newsletter-heading">
              {{ section.settings.heading }}
            </h2>
          {% endunless %}

          {% unless section.settings.newsletter_subheading == blank %}
            <h3 class="newsletter-subheading">
              {{ section.settings.newsletter_subheading }}
            </h3>
          {% endunless %}

        </header>
      {% endunless %}

      {% comment %} :: EMAIL INPUT FORM :: {% endcomment %}
      <form id="footer-newsletter">
        <input class="form-control newsletter-input js-newsletter-modal" type="email" id="email" name="email" {%- if section.settings.newsletter_placeholder != blank -%}placeholder="{{ section.settings.newsletter_placeholder }}"{%- endif -%} autocomplete="off">
        <label id="button-footer-newsletter-submit" for="footer-newsletter-submit">
          <input id="footer-newsletter-submit" type="submit" value="{{ section.settings.newsletter_submit_text }}">
        </label>
      </form>

      {% comment %} :: SUCCESS / ERROR HANDLER :: {% endcomment %}
      <div id="newsletter-form--response">
        <span id="newsletter-error-response" style="display:none;">{{ section.settings.newsletter_error }}</span>
        <span id="newsletter-success-response" style="display:none;">{{ section.settings.newsletter_success }}</span>
      </div>

    </div><!-- .newsletter-inner -->
  </div><!-- .newsletter-wrapper -->

</div>
{% schema %}
{
  "name": "Newsletter Simple",
  "settings":[
    {
     "type": "paragraph",
     "content": "Any customers who sign up will have an account created for them in Shopify. [View customers](/admin/customers?query=&accepts_marketing=1)"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "newsletter_subheading",
      "label": "Subheading"
    },
    {
      "type": "text",
      "id": "newsletter_placeholder",
      "label": "Placeholder Text",
      "default": "Join our Newsletter"
    },
    {
      "type": "text",
      "id": "newsletter_submit_text",
      "label": "Submit Button Text",
      "default": "SUBMIT"
    },
    {
      "type": "text",
      "id": "newsletter_error",
      "label": "Error Text",
      "default": "Please enter a valid e-mail address"
    },
    {
      "type": "richtext",
      "id": "newsletter_success",
      "label": "Success Text",
      "default": "<p>You have successfully joined our newsletter!</p>"
    }
  ],

  "presets": [{
      "name": "Newsletter Simple",
      "category": "Promotional"
  }]
}
{% endschema %}
