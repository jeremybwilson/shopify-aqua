// FUTURA BT -- LIGHT (Book)
@font-face{
  font-family: "Futura-BT";
  src:url( "{{ 'FuturaBT-Light.eot' | asset_url  }}&#iefix" );
  src:url( "{{ 'FuturaBT-Light.eot' | asset_url  }}&#iefix" ) format("eot"), /* IE9 Compat Modes */
    url( "{{ 'FuturaBT-Light.woff2' | asset_url  }}" ) format("woff2"),      /* Super Modern Browsers */
    url( "{{ 'FuturaBT-Light.woff' | asset_url  }}" ) format("woff"),        /* Pretty Modern Browsers */
    url( "{{ 'FuturaBT-Light.ttf' | asset_url  }}" ) format("truetype");     /* Safari, Android, iOS */
  font-weight: 400;
}

